        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/80000"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/montlypr"
        app:layout_constraintEnd_toEndOf="@+id/montlypr"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/montlypr"
        app:layout_constraintTop_toTopOf="@+id/montlypr"
