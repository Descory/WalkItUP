        app:layout_constraintTop_toTopOf="@+id/weekly"
        app:layout_constraintVertical_bias="0.318" />

    <TextView
        android:id="@+id/tv_totalMax2"
        android:layout_width="38dp"
        android:layout_height="26dp"
        android:text="/2500"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Daily"
        app:layout_constraintEnd_toEndOf="@+id/tvdaily"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/tvdaily"
